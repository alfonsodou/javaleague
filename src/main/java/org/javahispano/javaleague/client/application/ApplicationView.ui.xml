<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="nameTokens"
		type="org.javahispano.javaleague.client.place.NameTokens" />

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	</ui:style>

	<g:ScrollPanel>
		<b:Container>
			<b:Navbar position="FIXED_TOP">
				<b:Container>
					<b:NavbarHeader>
						<b:NavbarBrand targetHistoryToken="{nameTokens.getHome}"
							ui:field="brand">javaleague
						</b:NavbarBrand>
						<b:NavbarCollapseButton dataTarget="#navbar-collapse" />
					</b:NavbarHeader>
					<b:NavbarCollapse b:id="navbar-collapse">
						<b:NavbarNav>
							<b:AnchorListItem text="Ingreso / Registro" ui:field="login" targetHistoryToken="{nameTokens.getLogin}" />
							<b:AnchorListItem text="Torneo" ui:field="tournament" targetHistoryToken="{nameTokens.getTournament}" />
							<b:AnchorListItem text="Descargas" ui:field="downloads" targetHistoryToken="{nameTokens.getDownloads}" />
							<b:AnchorListItem text="Reglas" ui:field="rules" targetHistoryToken="{nameTokens.getRules}" />
							<b:AnchorListItem text="Foro" ui:field="forum" href="http://www.javahispano.org/foro-de-la-javacup/" />
						</b:NavbarNav>
					</b:NavbarCollapse>
				</b:Container>
			</b:Navbar>

			<!-- Container Content -->
			<g:SimplePanel ui:field="contentContainer" />
			
			<!-- Container Foot -->
			<g:SimplePanel ui:field="footContainer" />

		</b:Container>

	</g:ScrollPanel>

</ui:UiBinder>