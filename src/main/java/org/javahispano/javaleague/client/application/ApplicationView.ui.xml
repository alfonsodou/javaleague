<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:with field="nameTokens"
		type="org.javahispano.javaleague.client.place.NameTokens" />

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	
	.danger {
		background-color: #fcf2f2;
		border-color: #dFb5b4;
	}
	
	.margin-fix {
		margin-top: 0 !important;
	}
	</ui:style>

	<g:ScrollPanel>
		<b:Container>
			<b:Navbar position="FIXED_TOP">
				<b:Container>
					<b:NavbarHeader>
						<!-- <b:NavbarBrand targetHistoryToken="{nameTokens.getHome}" ui:field="brand">javaleague 
							</b:NavbarBrand> -->
						<g:InlineHyperlink targetHistoryToken="{nameTokens.getHome}"
							ui:field="brand">javaleague</g:InlineHyperlink>
						<b:NavbarCollapseButton dataTarget="#navbar-collapse" />
					</b:NavbarHeader>
					<b:NavbarCollapse b:id="navbar-collapse">
						<b:NavbarNav>
							<b:Button ui:field="loginButton" type="LINK">Ingreso / Registro</b:Button>
							<b:Button ui:field="tournamentButton" type="LINK">Torneo</b:Button>
							<b:Button ui:field="downloadButton" type="LINK">Descargas</b:Button>
							<b:Button ui:field="rulesButton" type="LINK">Reglas</b:Button>
							<b:AnchorButton ui:field="forumButton" type="LINK"
								href="http://www.javahispano.org/foro-de-la-javacup/">Foro</b:AnchorButton>
						</b:NavbarNav>
					</b:NavbarCollapse>
				</b:Container>
			</b:Navbar>

			<!-- Container Content -->
			<g:SimplePanel ui:field="contentContainer" />

			<!-- Container Foot -->
			<g:SimplePanel ui:field="footContainer" />

		</b:Container>

	</g:ScrollPanel>

</ui:UiBinder>