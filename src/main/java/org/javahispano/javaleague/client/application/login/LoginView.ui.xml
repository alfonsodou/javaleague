<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.footer button {
		margin-right: 5px;
	}
	
	.resultHeader {
		text-decoration: underline;
	}
	
	.resultBody {
		color: blue;
	}
	</ui:style>

	<b:Panel>
		<b:PanelHeader>
			<b:Heading size="H3" text="JSR-303 Bean Validation" />
		</b:PanelHeader>
		<b:PanelBody>
			<b:Column size="SM_6">
				<b:Panel>
					<b:PanelHeader>
						<b:Heading size="H3" text="Login" />
					</b:PanelHeader>
					<b:PanelBody ui:field="body" />
					<b:PanelFooter addStyleNames="{style.footer}">
						<b:ImageAnchor type="THUMBNAIL" url="images/32px/google.png" ui:field="loginGoogle" />
						<b:ImageAnchor type="THUMBNAIL" url="images/32px/facebook.png" ui:field="loginFacebook" />
						<b:ImageAnchor type="THUMBNAIL" url="images/32px/twitter.png" ui:field="loginTwitter" />

						<b:Button type="PRIMARY" ui:field="loginButton">Login</b:Button>
						<b:Button type="DANGER" ui:field="resetButton">Reset</b:Button>
					</b:PanelFooter>
				</b:Panel>
			</b:Column>
			<b:Column size="SM_6">
				<b:Heading size="H4" addStyleNames="{style.resultHeader}"
					text="Login Result" />
				<g:HTMLPanel>
					<div class="{style.resultBody}" ui:field="result" />
				</g:HTMLPanel>
			</b:Column>
		</b:PanelBody>
	</b:Panel>
</ui:UiBinder>