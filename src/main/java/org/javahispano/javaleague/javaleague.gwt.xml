<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.6.1//EN"
        "https://raw.githubusercontent.com/gwtproject/gwt/2.6.1/distro-source/core/src/gwt-module.dtd">
<module rename-to="javaleague">
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.inject.Inject' />

	<!-- Default css -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
	<!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/> -->

	<!-- Other module inherits -->
	<inherits name='com.gwtplatform.dispatch.Dispatch' />
	<inherits name='com.gwtplatform.mvp.MvpWithEntryPoint' />
	<inherits name="com.arcbees.analytics.Analytics" />
	<inherits name="com.wallissoftware.pushstate.PushState" />

	<inherits name="org.gwtbootstrap3.GwtBootstrap3" />
	
	<inherits name="org.javahispano.javaleague.client.Resources"/>
	
	<!-- For JSR-303 Bean Validation -->
	<inherits name="org.hibernate.validator.HibernateValidator" />
	<replace-with
		class="org.javahispano.javaleague.client.validation.FormsValidationFactory">
		<when-type-is class="javax.validation.ValidatorFactory" />
	</replace-with>	

	<source path='client' />
	<source path='shared' />

	<set-configuration-property name="gin.ginjector.modules"
		value="org.javahispano.javaleague.client.gin.ClientModule" />
</module>